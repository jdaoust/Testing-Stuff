<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jsonExtractTest">

    <Button
        android:id="@+id/exBackToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_main" />

    <Button
        android:id="@+id/extractButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extract_text" />

    <TextView
        android:id="@+id/extractedText"
        android:layout_width="match_parent"
        android:layout_height="624dp"
        android:contentDescription="@string/extracted_text"
        android:text="Extracted Text"
        android:textSize="24sp" />
</LinearLayout>